<div data-id="<%= article.id %>" class="athlete_article">
  <!-- <%= link_to "Cancel", athlete_administration_article_path(@athlete, article), remote: true %> -->
  <%= form_for [@athlete, :administration, article], data: {remote: true} do |f| %>

    <% if article.persisted? %>
      <%= link_to "Delete <i class='fa fa-close'></i>".html_safe, athlete_administration_article_path(@athlete, article), method: :delete, :class => 'delete_btn', data: { confirm: "Are you sure?", remote: true } %>
    <% end %>
    <ul>
      <% article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <%= f.text_field :title, placeholder: "Title" %>
    <%= f.text_area :description, placeholder: "Description" %>
    <%= f.url_field :raw_url, placeholder: "Article URL" %> 

    <%= f.button "Update", :class => 'secondary_btn', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Updating..."} %>

  <% end %>
</div>
