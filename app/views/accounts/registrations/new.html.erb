<div class="content center_text">

    <h1>Sign Up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, :placeholder => 'Email' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password' %>
        <!--
        <% if @minimum_password_length %>
        <em>(Minimum of <%= @minimum_password_length %> characters)</em>
        <% end %>
        -->
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Confirm password' %>
      </div>

      <p style="font-size:80%;">
        By signing up, you agree to our <%= link_to "Terms of Service", terms_path %>
      </p>

      <div class="actions">
        <%= f.submit "Sign up", :class => 'primary_btn' %>
      </div>

    <% end %>

    <div class="form_links"><%= render "accounts/shared/links" %></div>
    <div class="anchor_image"><%= image_tag('illustrations/green_game_01.jpg') %></div>

</div>
