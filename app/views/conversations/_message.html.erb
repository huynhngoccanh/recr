<% if message&.user == current_user %>
  <li class="message_right clearfix">
    <span class="message-author">Me</span>
    <p><%= message.body %></p>
  </li>
<% else %>
  <li class="clearfix">
    <span class="message-author" <%= "style=text-decoration:line-through;" unless message.user %>>
      <%= message.name %>
    </span>
    <p><%= message.body %></p>
  </li>
<% end %>
