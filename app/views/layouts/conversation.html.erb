  </head>

  <body class="<%= controller.controller_name %>">

    <header class="small">
      <div class="logo_wrap">
        <div class="logo_small">
          <%= link_to (image_tag 'rb_logo_small.png'), root_path %>
        </div>
      </div>
      <%= render "navbar" %>
    </header>


    <div id="main">
      <% if notice.present? || alert.present? %>
        <div class="center_text"><%= render "notices" %></div>
      <% end %>
      <%= yield %>
    </div>

    <%= render "mobile_nav" %>

    <%= render "search" %>
